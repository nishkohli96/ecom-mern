{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "lib:build": {},
    "dev": {
      "dependsOn": ["^lib:build"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^lib:build"],
      "outputs": ["dist/**", "build/**"]
    },
    "test": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "//#prettier": {},
    "deploy": {
      "dependsOn": ["build", "test"]
    }
  }
}
