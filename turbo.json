{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "lib:build": {},
    "dev": {
      "dependsOn": ["^lib:build"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^lib:build"],
      "outputs": ["dist/**", "build/**"]
    },
    "//#prettier": {},
    "deploy": {
      "dependsOn": ["build"]
    }
  }
}
